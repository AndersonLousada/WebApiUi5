<mvc:View
	controllerName="invent.clientes.controller.Lista"
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="app">

        <customHeader>
			<Toolbar>
				<Button type="Back" press=".onNavBack" />
				<ToolbarSpacer/>
				<Title text="Lista de Clientes" level="H1"/>
				<ToolbarSpacer/>
                <Button
                        icon="sap-icon://add-employee"
                        text="Cadastro Novo"
                        press="inserirCadastroNovo"/>
			</Toolbar>
		</customHeader>

    <Table
        id="listaDeContatos"
        items="{
            path : 'cliente>/',
            sorter : {
            path : 'ShipperName'}}"> 
            
            <headerToolbar>
                <Toolbar>
                    <Title
                        id="tableHeader"
                        text="{worklistView>/worklistTableTitle}"/>
                    <ToolbarSpacer/>
                    <SearchField width="20%" search="filtroDeContatos" liveChange="onSearch" />
                    
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="CÃ³digo" />
                </Column>
                <Column>
                    <Text text="Nome" />
                </Column>
                <Column>
                    <Text text="CPF" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle" type="Navigation" press="navegarParaDetalhes">
                    <cells>
                        <Text text="{cliente>id}" wrapping="false" />
                        <Text text="{cliente>nome}" wrapping="false"/>
                        <Text text="{cliente>cpf}" wrapping="false"/>
                    </cells>
                </ColumnListItem>
            </items>
    </Table>
    </Page>

</mvc:View>